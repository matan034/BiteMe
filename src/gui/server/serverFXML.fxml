<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="800.0" prefWidth="1280.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="server.serverController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="IP_label" styleClass="lbl" stylesheets="@../general/GeneralStyleSheet.css" text="IP">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="ip_input" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css" text="localhost" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="Port_label" styleClass="lbl" stylesheets="@../general/GeneralStyleSheet.css" text="Port">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="port_input" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css" text="5555">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" stylesheets="@../general/GeneralStyleSheet.css">
                     <children>
                        <Label fx:id="db_name_label" text="DB Name">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="db_name_input" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css" text="biteme" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="db_user_label" styleClass="lbl" stylesheets="@../general/GeneralStyleSheet.css" text="DB User">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="db_user_input" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css" text="root" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" stylesheets="@../general/GeneralStyleSheet.css">
                     <children>
                        <Label fx:id="db_password_label" styleClass="lbl" stylesheets="@../general/GeneralStyleSheet.css" text="DB Password">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <PasswordField fx:id="db_pass_input" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css" text="Aa123456" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="connect_btn" mnemonicParsing="false" onAction="#connectToDB" styleClass="btn" stylesheets="@../general/GeneralStyleSheet.css" text="Connect">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="disconnect_btn" mnemonicParsing="false" onAction="#disconnectFromDB" styleClass="btn" stylesheets="@../general/GeneralStyleSheet.css" text="Disconnect">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <Label fx:id="connect_status" text="    ">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="BASELINE_CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="close_btn" mnemonicParsing="false" onAction="#close_window" styleClass="btn" stylesheets="@../general/GeneralStyleSheet.css" text="Close">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</VBox>
