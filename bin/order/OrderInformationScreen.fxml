                                          <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                                       </GridPane.margin></TextField>
                                    <TextField fx:id="last_name_input" promptText="Last Name" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                       <GridPane.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </GridPane.margin></TextField>
                                    <TextField fx:id="phone_input" promptText="Phone Number" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css" GridPane.columnSpan="2" GridPane.rowIndex="4">
                                       <GridPane.margin>
                                          <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                                       </GridPane.margin></TextField>
                                    <TextField fx:id="company_input" prefHeight="31.0" prefWidth="392.0" promptText="Company(Optional)" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css" GridPane.columnSpan="2" GridPane.rowIndex="5">
                                       <GridPane.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </GridPane.margin></TextField>
                                    <TextField fx:id="street_input" prefHeight="31.0" prefWidth="392.0" promptText="Street" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css" GridPane.columnSpan="2" GridPane.rowIndex="6">
                                       <GridPane.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </GridPane.margin></TextField>
                                    <TextField fx:id="city_input" promptText="City" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css" GridPane.rowIndex="7">
                                       <GridPane.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </GridPane.margin>
                                    </TextField>
                                    <TextField fx:id="zip_input" promptText="Zip" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css" GridPane.columnIndex="1" GridPane.rowIndex="7">
