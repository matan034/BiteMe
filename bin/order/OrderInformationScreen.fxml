                                                <Button fx:id="minus_btn" mnemonicParsing="false" text="-">
                                                   <HBox.margin>
                                                      <Insets right="5.0" />
                                                   </HBox.margin>
                                                </Button>
                                                <Label fx:id="people_cnt" text="1">
