                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="hour_input" prefHeight="31.0" prefWidth="106.0" promptText="Supply Hour" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </TextField>
                        <DatePicker fx:id="date_input" prefHeight="31.0" prefWidth="136.0" promptText="Supply Date" styleClass="text-box" stylesheets="@../general/GeneralStyleSheet.css">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </DatePicker>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="287.0" prefWidth="800.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                           <children>
                              <GridPane fx:id="delivery_details" hgap="10.0" prefHeight="295.0" prefWidth="344.0" vgap="10.0" visible="false">
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
