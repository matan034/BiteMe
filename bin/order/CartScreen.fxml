<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="order.CartController">
   <children>
      <ScrollPane hbarPolicy="NEVER">
         <content>
            <VBox>
               <children>
                  <HBox>
                     <children>
                        <VBox fx:id="cart_items_vbox" />
                     </children>
                  </HBox>
                  <HBox minHeight="-Infinity" minWidth="-Infinity">
                     <children>
                        <Label styleClass="lbl" stylesheets="@../general/GeneralStyleSheet.css" text="Total Price: ">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="total_price_label" styleClass="lbl" stylesheets="@../general/GeneralStyleSheet.css" text="price">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity">
                     <children>
                        <Button fx:id="checkout_btn" mnemonicParsing="false" onAction="#checkout" styleClass="btn" stylesheets="@../general/GeneralStyleSheet.css" text="Checkout" />
                     </children>
                  </HBox>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
